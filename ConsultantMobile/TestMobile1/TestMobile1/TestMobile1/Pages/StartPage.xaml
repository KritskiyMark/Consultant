    <StackLayout>
        <StackLayout Orientation="Horizontal"  >
            <Label Text="Menu" FontSize="Large"
                                               TextColor="Black"  WidthRequest="70" ></Label>
        <!--<Label
        Margin="20"
        HorizontalOptions="Center"
        FontSize="Large"
        Text="Консультант" 
         TextColor="Black">
        </Label>-->
        </StackLayout>
        <ListView x:Name="LViewProducts"
                  ItemSelected="LViewProducts_ItemSelected"
                  ItemTapped="LViewProducts_ItemTapped"
                  HasUnevenRows="True"
                  SeparatorColor="#a55ff5" 
                  SeparatorVisibility="None"
            IsPullToRefreshEnabled="True"
                  IsRefreshing="{Binding IsRefreshing}"
                  RefreshCommand="{Binding RefreshCommand}"
                  RefreshControlColor="#a55ff5">

            <ListView.ItemTemplate>
                <DataTemplate >
                    <!--x:DateType="model:Product"--> 
                    <ViewCell>
                        <Grid Padding="10">
                            <Frame CornerRadius="20">
                                <StackLayout Orientation="Horizontal">
                                    <!--<Image Source="/Resources/drawable/img_148071.png"
                                           WidthRequest="66"/>-->
                                    <Image Source="{Binding Photo}"
                                           WidthRequest="66"/>
                                    <StackLayout VerticalOptions="Center">
                                        <Label VerticalOptions="Center"
                                            FontSize="Large"
                                               TextColor="Black"
                                               Text="{Binding Name}"/>
                                        <Label VerticalOptions="Center"
                                               FontSize="Large"
                                               
                                               Text="{Binding Cost}"/>
                                    </StackLayout>
                                </StackLayout>
                            </Frame>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center"  >
            <!--Button Clicked="AddItem" Text="Добавить" CornerRadius="20"   />-->
            <!--<Button Clicked="RemoveItem" Text="Удалить" CornerRadius="20"  />-->
        </StackLayout>
    </StackLayout>

</ContentPage>
